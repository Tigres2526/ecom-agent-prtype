# Core AI Configuration
GROK_API_KEY=your-grok-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Advertising Platform APIs
## Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

## TikTok
TIKTOK_APP_ID=your-tiktok-app-id
TIKTOK_APP_SECRET=your-tiktok-app-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

## Google Ads
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
GOOGLE_DEVELOPER_TOKEN=your-google-developer-token
GOOGLE_CUSTOMER_ID=your-google-customer-id

# E-commerce Platform APIs
## Shopify
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

## BigCommerce
BIGCOMMERCE_CLIENT_ID=your-bigcommerce-client-id
BIGCOMMERCE_ACCESS_TOKEN=your-bigcommerce-access-token
BIGCOMMERCE_STORE_HASH=your-store-hash

# Simulation Configuration
INITIAL_CAPITAL=500
MAX_DAYS=200
DAILY_FEE=5
SIMULATION_AUTO_START=false

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
AUDIT_DIR=./audit
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=true

# API Server Configuration
API_PORT=3000
API_HOST=0.0.0.0
ENABLE_CORS=true
CORS_ORIGIN=*

# Monitoring Configuration (Optional)
ENABLE_METRICS=true
METRICS_PORT=9091
ENABLE_HEALTH_CHECK=true

# Security Configuration
API_KEY=your-api-key-for-authentication
ENABLE_API_AUTH=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
MAX_CONCURRENT_CAMPAIGNS=50
MEMORY_RETENTION_DAYS=30
CONTEXT_WINDOW_SIZE=30000
DECISION_TIMEOUT_MS=30000

# Error Handling Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Development/Testing
NODE_ENV=production
TEST_MODE=false
MOCK_API_RESPONSES=false

# Grafana (for docker-compose monitoring profile)
GRAFANA_PASSWORD=your-secure-password
